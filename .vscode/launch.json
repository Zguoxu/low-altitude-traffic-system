{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试 C++ 后端",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/backend/build/low_altitude_traffic_system_backend",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/backend",
      "environment": [
        {
          "name": "DB_HOST",
          "value": "mysql"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_NAME",
          "value": "low_altitude_traffic"
        },
        {
          "name": "DB_USER",
          "value": "appuser"
        },
        {
          "name": "DB_PASSWORD",
          "value": "apppassword"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "启用 gdb 的整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "构建 C++ 后端",
      "miDebuggerPath": "/usr/bin/gdb",
      "logging": {
        "engineLogging": false
      }
    },
    {
      "name": "启动前端开发服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@vue/cli-service/bin/vue-cli-service.js",
      "args": ["serve"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "启动完整应用",
      "configurations": [
        "启动前端开发服务器",
        "调试 C++ 后端"
      ],
      "stopAll": true
    }
  ]
}